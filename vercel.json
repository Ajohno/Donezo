{
    "version": 2,
    "installCommand": "npm install --include=dev",
    "buildCommand": "npm run build:css", 
    "builds": [
      { "src": "server.js", "use": "@vercel/node" }
    ],
    "routes": [
      { "src": "/public/(.*)", "dest": "/public/$1" },
      { "src": "/(.*)",        "dest": "server.js" }
    ]
  }
  